<html class="no-js" lang="">

{% include 'admin/head.html.twig' %}

<body>
{% include 'admin/Header.html.twig' %}
<div class="container">
    <form class="insertform" action="../admin/DesignLayout" method="post" enctype="multipart/form-data" >
        <div class="row">
            <div class="col-sm-6">
                <label for="name">history-wrapper-h1</label>
                <input type='text' value="{{ options.h1 }}" name="history-wrapper-h1" />
            </div>
            <div class="col-sm-6">
                <label for="price">history-wrapper-h4</label>
                <input type='text' value="{{ options.h4 }}" name="history-wrapper-h4" />
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <label for="name">history-wrapper-p</label>
                <textarea id="my_editor" name="history-wrapper-p" ></textarea>
            </div>
        </div>
            <div class="row">
            <div class="col-sm-12">
                <input type='file' multiple name="history-wrapper-images[]"/>
            </div>
        </div>


        <div class="row">
            <div class="col-sm-12">
                <input class="btn btn-primary" type='submit' onclick="submitForm()" />
            </div>
        </div>





    </form>
    <div class="img-container">
    <div class="row">
            {% if images %}
            {% for image in images %}
                <div  class="col-xs-2 "><img class="img-responsive" src="../images/layout/{{ image.imageurl }}"><button class="img-to-delete">x</button></div>
            {% endfor %}
            {% endif %}
        </div>
    </div>
</div>
</body>
