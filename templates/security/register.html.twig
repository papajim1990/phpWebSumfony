{% if error %}
    <div>{{ error }}</div>
{% endif %}

<form action="{{ path('user_registration') }}" method="post">
    <label for="username">Username:</label>
    <input type="text" id="username" name="username" value="{{ last_username }}" />
    <label for="email">Username:</label>
    <input type="text" id="email" name="email" value="{{ last_username }}" />
    <label for="password">Password:</label>
    <input type="password" id="password" name="password" />
    <label for="password">Repeat Password</label>
    <input type="password" id="Repeat Password" name="repeated_password" />

    {#
        If you want to control the URL the user
        is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
    #}

    <button type="submit">login</button>
</form>